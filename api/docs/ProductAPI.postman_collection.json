{
  "info": {
    "name": "Basic Product API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["products"]
        }
      }
    },
    {
      "name": "Get product by id",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/products/123245",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["products", "123245"]
        }
      }
    },
    {
      "name": "Filter by category",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/products?category=Apparel",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["products"],
          "query": [{"key": "category", "value": "Apparel"}]
        }
      }
    },
    {
      "name": "Create product",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"T-Shirt\",\n  \"imageUrl\": \"https://example.com/t.png\",\n  \"description\": \"Cotton tee\",\n  \"price\": 25,\n  \"category\": \"Apparel\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["products"]
        }
      }
    }
  ]
}
